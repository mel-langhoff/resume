<% content_for :page_title do %>
  <h1 class="page-title">Projects</h1>
<% end %>

<strong>Filter Projects:</strong>
  <div>
    <%= link_to 'All', projects_path(project_type: 'All') %> |
    <% @types.each do |type| %>
      <%= link_to type.capitalize, projects_path(project_type: type) %> |
    <% end %>
  </div>

<% @by_type.each do |project| %>
  <div id="project-description-<%= project.id %>">
    <h2><%= project.title %></h2>
    <p><%= project.description %></p>
    <p>Tech: <%= project.tech %></p>
    <p><%= link_to 'Github Repository', project.git_repo, target: '_blank' %></p>
    <% if project.project_link? %>
      <p><%= link_to 'Demo Link', project.demo_link, target: '_blank' %></p>
    <% end %>
  </div>
<% end %>