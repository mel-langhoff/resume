<% content_for :page_title do %>
  <h1 class="page-title">Projects</h1>
<% end %>

<strong>Filter projects:</strong>
<%= form_with url: projects_path, method: :get, local: true, data: { turbo: false } do %>
  <div class="filter-buttons">
    <%= label_tag :type %>
    <%= select_tage :type, options_for_select(['All']%>

<% @projects.each do |project| %>
  <div id="project-description-<%= project.id %>">
    <p><strong>"<%= project.title %>"</strong></p>
    <p><%= project.description%></p>
    <p><%= link_to 'Github Repository', project.git_repo, target: '_blank' %></p>
    <p>Technologies: <%= project.tech %></p>
    <% if project.project_link? %>
      <p><%= link_to 'Demo Link', project.demo_link, target: '_blank' %></p>
    <% end %>
  </div>
<% end %>
